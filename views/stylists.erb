<h1>Welcome to the page for <%= @stylist.name %>!</h1>

<h2>Edit stylist</h2>


<form action="/stylist/<%= @stylist.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input class="form-control" type="text" placeholder="name" name="name" value="<%= @stylist.name %>">
  <button type="submit" class="btn btn-success">Save Changes</button>
</form>

<form action="/stylist/<%= @stylist.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <button class="btn btn-danger btn-sm" type="submit">Delete Stylist</button>
      </form>
